<div class="page-header">
  <h1>Lista de Clientes</h1>
  <%= link_to 'Crear nuevo Cliente', new_cliente_path, {role:"button", class:"btn btn-primary"} %>
</div>
<div class="panel panel-default">
  <div class="table-responsive ">
<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= link_to 'Mostrar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
