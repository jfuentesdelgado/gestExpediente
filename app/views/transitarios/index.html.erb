<div class="page-header">
  <h1>Listado Transitarios</h1>
  <%= link_to 'Crear nuevo Transitario', new_transitario_path , {role:"button", class:"btn btn-primary"} %>
</div>

<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="table-responsive ">
  <table class="table table-condensed table-hover table-striped">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @transitarios.each do |transitario| %>
      <tr>
        <td><%= transitario.nombre %></td>
        <td><%= link_to 'Mostrar', transitario %></td>
        <td><%= link_to 'Editar', edit_transitario_path(transitario) %></td>
        <td><%= link_to 'Eliminar', transitario, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>

