<div>
	<% if flash[:alert] %>
	  <p>
	    <%= flash[:alert] %>
	  </p>
	<% end %>

	<%= form_tag do %>
	  <fieldset>
	  	<legend>
	  	  Introduzca usuario y contraseña
	  	</legend>
	  	<div>
	  	  <%= label_tag :name, "Nombre:"%>
	  	  <%= text_field_tag :name, params[:name] %>
	  	</div>
	  	<div>
	  	  <%= label_tag :password, "Contraseña:"%>
	  	  <%= password_field_tag :password, params[:password] %>
	  	</div>
	  	<div>
	  	  <%= submit_tag "Login" %>
	  	</div>
	 </fieldset>
  <%end%>
</div>
