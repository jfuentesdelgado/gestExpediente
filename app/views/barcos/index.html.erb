 <div class="page-header">
    <h1>Listado Barcos</h1>
    <%= link_to 'Crear nuevo Barco', new_barco_path, {role:"button", class:"btn btn-primary"} %>
  </div>



<div class="panel panel-default">
  <div class="table-responsive ">
<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @barcos.each do |barco| %>
      <tr>
        <td><%= barco.nombre %></td>
        <td><%= link_to 'Mostrar', barco %></td>
        <td><%= link_to 'Editar', edit_barco_path(barco) %></td>
        <td><%= link_to 'Eliminar', barco, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>





