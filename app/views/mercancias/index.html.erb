<div class="page-header">
  <h1>Listado Mercancias</h1>
  <%= link_to 'Crear nuevo Mercancia', new_mercancia_path, {role:"button", class:"btn btn-primary"} %>
</div>

<div class="panel panel-default">
  <div class="table-responsive ">
<table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @mercancias.each do |mercancia| %>
      <tr>
        <td><%= mercancia.nombre %></td>
        <td><%= link_to 'Mostrar', mercancia %></td>
        <td><%= link_to 'Editar', edit_mercancia_path(mercancia) %></td>
        <td><%= link_to 'Eliminar', mercancia, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>


